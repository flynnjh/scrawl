// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model thought {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())

    text String @db.VarChar(2000)
}
